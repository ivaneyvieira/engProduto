#!/usr/bin/env bash

source variables.env

git pull
docker-compose build

sleep 15
docker-compose stop

sleep 2
docker-compose up --force-recreate -d

# Verifica se o comando foi bem-sucedido
if [ $? -eq 0 ]; then
  echo "Containers started successfully"
else
  echo "Failed to start containers" >&2
  exit 1
fi

date
